/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
	max-height 0
	padding 0 !important
	transition all 0.5s
	transform translateX(-120%)

	&.order-enter-active
		max-height 60px
		padding 2rem 0 !important
		transform translateX(0)

.order-leave
	transition all 0.5s
	transform translateX(0)

	&.order-leave-active
		max-height 0
		padding 0
		transform translateX(120%)


.count-enter
	transition all 0.25s
	transform translateY(100%) // Start offscreen.

	&.count-enter-active
		transform translateY(0) // Slide into place.

.count-leave
	bottom 0
	left 0
	position absolute
	transition all 0.25s
	transform translateY(0) // Start where it is.

	&.count-leave-active
		transform translateY(-100%) // Slide it away.